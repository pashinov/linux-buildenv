#!/bin/sh
#
# Configuration the network....
#

case "$1" in
	start)
		printf "Starting configuration network: "

		echo ""                                             >> /etc/network/interfaces
		echo "# Wired or wireless interfaces"               >> /etc/network/interfaces
		echo "auto eth0"                                    >> /etc/network/interfaces
		echo "iface eth0 inet static"                       >> /etc/network/interfaces
		echo "	address 192.168.0.2"                        >> /etc/network/interfaces
		echo "	netmask 255.255.255.0"                      >> /etc/network/interfaces
		echo "iface eth1 inet dhcp"                         >> /etc/network/interfaces

		echo "OK"
		;;

	stop)
		printf "Configuration network setup to default: "

		echo "# interface file auto-generated by buildroot" > /etc/network/interfaces
		echo ""                                             >> /etc/network/interfaces
		echo "auto lo"                                      >> /etc/network/interfaces
		echo "iface lo inet loopback"                       >> /etc/network/interfaces

		echo "OK"
		;;

	restart|reload)
		"$0" stop
		"$0" start
		;;

	*)
		echo "Usage: $0 {start|stop|restart}"
		exit 1
esac

exit $?
